<Window x:Class="UkolBanka.KreditLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UkolBanka"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        fw:AcrylicWindow.Enabled="True"
        fw:AcrylicWindow.AcrylicWindowStyle="None"
        mc:Ignorable="d"
        Title="KreditLoad" Height="720" Width="1800" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="nameOfAcc" Grid.ColumnSpan="2" Content="Kreditní účet" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold"></Label>
            <Label Grid.Column="4" HorizontalAlignment="Right" Content="[Datum]" x:Name="actualDate" FontSize="24" FontWeight="Bold"></Label>
            <Label Grid.ColumnSpan="3" Grid.Row="0" Grid.Column="2" x:Name="actualStateOfMoney" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="25"></Label>
            <Label Grid.Row="1" Content="Vybrat peníze:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="30"></Label>
            <Label Grid.Column="5" HorizontalAlignment="Right" Content="Virtuální datum" x:Name="virtaulDate" FontSize="24" VerticalContentAlignment="Bottom" Margin="0,56,0,0" Width="290"/>
            <TextBox Margin="0,0,0,30" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Bottom" Grid.ColumnSpan="2" x:Name="unPasteMoney" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
            <Label x:Name="lblPasteMoney" Grid.Row="2" Visibility="Hidden" Content="Vložit peníze:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="30"></Label>
            <TextBox Margin="0,0,0,30" Grid.Row="2" Visibility="Hidden" Grid.Column="1" VerticalContentAlignment="Bottom" Grid.ColumnSpan="2" x:Name="pasteMoney" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
            <Button Visibility="Hidden" x:Name="pasteMoneyBtn" Grid.Column="3" Grid.Row="2" Click="pasteMoneyBtn_Click" Height="Auto" Margin="10,35,197,10" Background="#FF67FF4F">
                <materialDesign:PackIcon Kind="Money" Width="60" Height="60"/>
            </Button>
            <Ellipse ToolTip="Zbývá 45 dnů bez sankcí." x:Name="warningEll"  Grid.Column="3" Grid.Row="2" Height="0" Width="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Fill="Red"></Ellipse>
            <materialDesign:PackIcon x:Name="warningIcon" Kind="Warning" Grid.Row="2" Grid.Column="3" Width="0" Height="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,23.5,0"/>
            <Button x:Name="unPasteMoneyBtn" Grid.Column="3" Grid.Row="1" Click="unPasteMoneyBtn_Click" Height="Auto" Margin="10,35,197,10" Background="#FF67FF4F">
                <materialDesign:PackIcon Kind="Payment" Width="60" Height="60"/>
            </Button>

            <Button x:Name="close" Click="close_Click" Width="50" Height="30" Grid.Column="5" VerticalAlignment="Top" HorizontalAlignment="Right" Background="PaleVioletRed">
                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
            </Button>
            <Button Grid.Column="0" Grid.Row="5" x:Name="infoBtn" Click="infoBtn_Click" Height="70" VerticalAlignment="Center" HorizontalAlignment="Left" Background="#FF59FFF7" Margin="10,40,0,10" Width="95">
                <materialDesign:PackIcon Kind="InfoCircleOutline" Width="60" Height="60"/>
            </Button>
            <materialDesign:PackIcon Kind="InfoCircleOutline" Width="30" Height="30" Grid.Column="1" Grid.Row="5" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
            <Label Grid.Row="5" Grid.Column="1" Content="Po upozornění banky musí dojít k úhradě veškerých dluhů do max. 45 dnů, jinak budete muset platit úrok 3,6%." Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="35,0,0,0"></Label>

            <Border x:Name="infoUrokBorder" Visibility="Hidden" Grid.Column="5" Grid.Row="1" Grid.RowSpan="2" Margin="2" Background="#FFE6E6E6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="0.7*"/>
                    </Grid.RowDefinitions>
                    <TextBox IsEnabled="False" TextWrapping="WrapWithOverflow" Text="Po kliknutí na kalendář se zde zobrazí Vaše predikce Vašeho zúročnění (pokud nezaplatíte v řádném termínu)." HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="20" Foreground="Black"></TextBox>
                    <materialDesign:PackIcon Height="40" Width="40" Kind="ArrowDown" Grid.Row="1" HorizontalAlignment="Center"/>
                    <TextBox Grid.Row="2" IsEnabled="False" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="18" x:Name="txtPredikce"></TextBox>
                </Grid>
            </Border>
            <Calendar x:Name="calendar" SelectedDatesChanged="calendar_SelectedDatesChanged" Margin="10,0,10,10" Grid.RowSpan="3" Grid.Column="5" Grid.Row="3"/>
        </Grid>
    </Border>
</Window>
